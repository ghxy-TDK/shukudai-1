.background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(5px); /* 模糊背景图片 */
  } 
  /* 左边的导航项目 */
  .pack-left-item {
    width: 70px; /* 导航栏宽度 */
    background-color: rgba(51, 51, 51, 0.034);
    /* color: white; */
    padding-top: 20px;
    display: flex;
    flex-direction: column; /* 垂直排列导航项 */
  }
  /* 设置每个左边的导航文本 */
.pack-left-test {
    padding: 15px;/* 内边距 */
    margin: 15px 0;/* 外边距 */
    background-color: rgba(18, 180, 145, 0.363);
    border-radius: 8px;/*这使得导航项的四个角变得圆滑，圆角的半径为 8 像素。原本直角的边框会变得圆润。*/
    text-align: center;/* 文本居中 */
    cursor: pointer;/*提示用户可以点击*/
  }
  .pack-left-test1 {
    padding: 15px;/* 内边距 */
    margin: 15px 0;/* 外边距 */
    background-color: rgba(180, 56, 18, 0.925);
    border-radius: 8px;/*这使得导航项的四个角变得圆滑，圆角的半径为 8 像素。原本直角的边框会变得圆润。*/
    text-align: center;/* 文本居中 */
    cursor: pointer;/*提示用户可以点击*/
  }
  /* 设置右边界面 */
  .pack-right-item{
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 2px;
}
.pack-right-title{
  font-size: 18px;
  font-weight: bold;
}